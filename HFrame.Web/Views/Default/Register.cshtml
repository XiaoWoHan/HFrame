@model HFrame.Web.Default.Model.RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <title>注册</title>
    <style>
        .center {
            margin-top: 25%;
        }

        @@media screen and (min-width:960px) {
            .center {
                margin-left: 25%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Register","Default",FormMethod.Post,new { @class = "col-md-6 center" }))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "请输入用户名" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "请输入密码" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.RePassword, new { @class = "form-control", placeholder = "请再次输入密码" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", placeholder = "请输入手机号" })
                </div>
                <div class="form-group">
                    <input type="submit" value="注册" class="btn btn-primary btn-block" />
                </div>
            }
        </div>
    </div>
</body>
</html>
